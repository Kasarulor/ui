<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f4f8"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/home_color_s"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:id="@+id/n1"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/n2"
            android:textColor="@color/home_color_s"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/n3"
            android:layout_marginLeft="1dp"
            android:textColor="@color/home_color_s"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/home_color_s"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:id="@+id/n4"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/n5"
            android:textColor="@color/home_color_s"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/n6"
            android:layout_marginLeft="1dp"
            android:textColor="@color/home_color_s"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/home_color_s"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:id="@+id/n7"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/n8"
            android:textColor="@color/home_color_s"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/n9"
            android:layout_marginLeft="1dp"
            android:textColor="@color/home_color_s"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:text="字母"
            android:textColor="@color/home_color_s"
            android:textSize="18sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/n0"
            android:textColor="@color/home_color_s"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/itemclick_ui"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/home_color_s"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>